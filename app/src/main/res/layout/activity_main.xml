<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <net.chocomelon.sketch.DrawView
        android:id="@+id/view_draw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_draw"
        android:layout_below="@+id/container_buttons" />

    <LinearLayout
        android:id="@+id/container_seekbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttons_container_height"
        android:layout_below="@+id/container_buttons"
        android:background="#50dddddd"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:visibility="gone">

        <SeekBar
            android:id="@+id/seekbar_kankaku_updown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="6"
            android:progress="2" />

        <SeekBar
            android:id="@+id/seekbar_kankaku_leftright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="6"
            android:progress="0" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ddd">

        <Button
            android:id="@+id/button_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RELOAD" />

        <Button
            android:id="@+id/button_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button_reload"
            android:text="POSITION" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="BACK" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_draw"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:text="DRAW"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>
